:root
  --poly__color rgb(0, 0, 0)
  --poly__background rgb(186, 186, 186)

  --poly__font-size 0.875rem
  --poly__font-weight 700

  --poly__padding 11px 21px

  --poly__opacity_disabled 0.8 !important
  --poly__opacity_normal 0.7
  --poly__opacity_hover 0.9
  --poly__opacity_focus 1.0
  --poly__opacity_active 1.0
  
  --poly__filter_background_normal brightness(100%)
  --poly__filter_background_hover brightness(90%)
  --poly__filter_background_focus brightness(80%)
  --poly__filter_background_active brightness(70%)
  --poly__filter_background_disabled grayscale(60%)

  
  --poly__transition all 0.2s ease 0s
